   try:

       nascimento = int(input("Qual o seu ano de nascimento? "))

       if (nascimento > 1921) and (nascimento < 2022):
        idade = 2022 - nascimento
        
        print(f"Oi {nome} tudo bem? Vimos aqui e vocÃª vai ou fez {idade} esse ano!")

        erro = False
       else:

           print("VocÃª digitou de forma equivocada")

   except:
        print("Ocorreu um erro, tente novamente")