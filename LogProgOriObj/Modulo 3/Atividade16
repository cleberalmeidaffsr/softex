def calcular(number1, number2, operac):
    if(operac == "+"):
        result = number1 + number2
    elif(operac == "-"):
        result = number1 - number2
    elif(operac == "*"):
        result = number1 * number2
    elif(operac == "/"):
        result = number1 / number2
    else:
        result = 0
        print("Operação inválida")

number1 = input("Digite um número: ")
number2 = input("Digite o segundo número: ")
operac = input("Qual operação você deseja fazer?")
             
